@model IEnumerable<EmployeeMVC5.Models.Employee>
@{
    ViewBag.Title = "Employees";
}

<h2>List of Employees</h2>
<p>
    @Html.ActionLink("New Employee", "New", "Employees", null, new { @class = "btn btn-primary" })
</p>

@if(!Model.Any())
{
    <p>We don't have any employees yet</p>
}
else
{
    <table id="customers" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Employee Full Name</th>
                <th>Employment Type</th>
                <th> Delete </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var employee in Model)
            {
                <tr>
                    <td>@Html.ActionLink(employee.FullName, "Edit", "Employees", new { id = employee.Id }, null)</td>
                    <td>@employee.EmploymentType.Name</td>
                    <td>
                        <button data-employee-id="@employee.Id" class="btn-link js-delete">Delete</button>
                    </td>
                </tr>
            }
        </tbody>

    </table>
}

@section scripts
{
    <script>

        $(document).ready(function () {
            $("#customers .js-delete").on("click", function () {
                if (confirm("Are you sure you want to delete this employee?")) {
                    $.ajax({
                        url: "/api/employees/" + $(this).attr("data-employee-id"),
                        method: "DELETE",
                        success: function () {
                            console.log("Success");
                        }
                    });
                }
            });
        });
    </script>    
}