@model EmployeeMVC5.ViewModels.DepartmentFormViewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Department</h2>
@using (Html.BeginForm("Save", "Departments"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Department.Name)
        @Html.TextBoxFor(m => m.Department.Name, new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.Department.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}
